<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rluser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary">
            <ImageView
                android:id="@+id/proicon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:src="@drawable/usertab"/>
            <TextView
                android:id="@+id/protvuser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="USER NAME : "
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_toEndOf="@+id/proicon"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"/>
            <TextView
                android:id="@+id/protvname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SOMEONE"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_toEndOf="@+id/protvuser"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/protvgender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GENDER : "
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_toEndOf="@+id/proicon"
                android:layout_marginTop="40dp"
                android:layout_marginStart="10dp"/>
            <TextView
                android:id="@+id/protvmale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MALE"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_toEndOf="@+id/protvgender"
                android:layout_marginTop="40dp"
                android:layout_marginStart="10dp"/>
            <TextView
                android:id="@+id/protvemailtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EMAIL : "
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_toEndOf="@+id/proicon"
                android:layout_marginTop="60dp"
                android:layout_marginStart="10dp"/>
            <TextView
                android:id="@+id/protvemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="gmail.com"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_toEndOf="@+id/protvgender"
                android:layout_marginTop="60dp"
                android:layout_marginStart="10dp"/>
            <TextView
                android:id="@+id/protvphonetitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PHONE : "
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_toEndOf="@+id/proicon"
                android:layout_marginTop="80dp"
                android:layout_marginStart="10dp"/>
            <TextView
                android:id="@+id/protvphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2564"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_toEndOf="@+id/protvgender"
                android:layout_marginTop="80dp"
                android:layout_marginStart="10dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rluser"
            android:layout_marginBottom="60dp">

            <TextView
                android:id="@+id/headinfo"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/blackshade"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:text="CHANGE INFO"
                android:textAlignment="center"
                />

            <LinearLayout
                android:id="@+id/llemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/headinfo"
                android:layout_margin="5dp">

                <EditText
                    android:id="@+id/etproemail"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textColor="@color/colorAccent"
                    android:hint="Email"/>
                <TextView
                    android:id="@+id/tvchangeemail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="Change"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/colorPrimary" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/llemail"
                android:layout_margin="5dp">

                <TextView
                    android:id="@+id/tvprocode"
                    android:layout_width="45dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    android:text="+254"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccent"
                    android:textSize="15dp" />
                <EditText
                    android:id="@+id/etprophone"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:inputType="phone"
                    android:textColor="@color/colorAccent"
                    android:hint="Phone"/>
                <TextView
                    android:id="@+id/tvchangephone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="Change"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/colorPrimary" />
            </LinearLayout>

            <TextView
                android:id="@+id/headpass"
                android:layout_below="@+id/llphone"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="30dp"
                android:background="@color/blackshade"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:text="CHANGE PASSWORD"
                android:textAlignment="center"/>

            <EditText
                android:id="@+id/etpropass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/headpass"
                android:layout_margin="5dp"
                android:hint="Current Password"
                android:inputType="textPassword"
                android:textColor="@color/colorAccent" />

            <EditText
                android:id="@+id/etpronewpass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etpropass"
                android:layout_margin="5dp"
                android:hint="New Password"
                android:inputType="textPassword"
                android:textColor="@color/colorAccent" />

            <EditText
                android:id="@+id/etproconpass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etpronewpass"
                android:layout_margin="5dp"
                android:hint="Confirm New Password"
                android:inputType="textPassword"
                android:textColor="@color/colorAccent" />

            <Button
                android:id="@+id/btchangepass"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@+id/etproconpass"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:text="CHANGE"
                android:background="@color/colorPrimary"/>

            <TextView
                android:id="@+id/headmore"
                android:layout_below="@+id/btchangepass"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="30dp"
                android:background="@color/blackshade"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:text="MORE"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/previously"
                android:layout_below="@+id/headmore"
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="30dp"
                android:text="Previous Transactions"
                android:padding="5dp"/>
            <TextView
                android:id="@+id/contact"
                android:layout_below="@+id/previously"
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="30dp"
                android:text="Report Issues"
                android:padding="5dp" />
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>