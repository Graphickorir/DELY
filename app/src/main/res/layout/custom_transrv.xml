<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:elevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:padding="3dp">
            <TextView
                android:id="@+id/tvtransdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="DATE: "
                android:textStyle="bold"
                android:padding="2dp"/>
            <TextView
                android:id="@+id/transdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/tvtransdate"
                android:text="10/10/2012"
                android:textStyle="bold"
                android:padding="2dp"/>
            <TextView
                android:id="@+id/transid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                android:text="564865"
                android:textStyle="bold"
                android:padding="2dp"/>
            <TextView
                android:id="@+id/tvtransid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/transid"
                android:layout_gravity="end"
                android:text="TRANS ID: "
                android:textStyle="bold"
                android:padding="2dp"/>
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:background="@color/colorPrimary" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:padding="3dp">
            <TextView
                android:id="@+id/tvtype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="TYPE: "
                android:textStyle="bold"
                android:padding="2dp"/>
            <TextView
                android:id="@+id/transtype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/tvtype"
                android:layout_gravity="end"
                android:text="order"
                android:textStyle="bold"
                android:padding="2dp"/>
            <TextView
                android:id="@+id/tvtrans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                android:text="KSH 1000"
                android:textStyle="bold"
                android:padding="2dp"/>
            <TextView
                android:id="@+id/tvtransamt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/tvtrans"
                android:text="AMOUNT: "
                android:textStyle="bold"
                android:padding="2dp"/>
        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:background="@color/colorPrimary" />
        <Spinner
            android:id="@+id/transspinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tag="ORDER ID"
            android:layout_margin="5dp"
            android:visibility="gone"/>

    </LinearLayout>
</android.support.v7.widget.CardView>