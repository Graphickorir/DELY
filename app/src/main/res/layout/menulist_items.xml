<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="31dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivitemfav"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="8dp"
        android:src="@drawable/favno"/>

    <TextView
        android:id="@+id/tvitemname"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:gravity="start"
        android:layout_marginEnd="10dp"
        android:text="Item"
        android:layout_toEndOf="@id/ivitemfav"
        android:textAlignment="viewStart"
        android:padding="5dp"/>
    <TextView
        android:id="@+id/tvitemprice"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_toEndOf="@id/tvitemname"
        android:text="Price"
        android:padding="5dp"
        android:textAlignment="center"/>

    <ImageView
        android:id="@+id/ivitemcart"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_toEndOf="@id/tvitemprice"
        android:padding="7dp"
        android:src="@drawable/cartno"/>

</RelativeLayout>